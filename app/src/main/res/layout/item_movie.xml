<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#121212"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/ivPoster"
        android:autoText="false"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:paddingLeft="5dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="A Star is Born" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAuthor"
        android:layout_toEndOf="@id/ivPoster"
        android:paddingLeft="5dp"
        android:textColor="@android:color/white"
        tools:text="aweifoiwjfeawjfjawfjoawifjoiawjfiojawoefjioa wjfioawjefi ojawieofj aoiwefj ioawjfio ajwefoij awiofjaowijfiowaejfioawjio jwaioejfoia wjefoiajwe ofjaweof jioawejfoiwajefoawiejf " />
</RelativeLayout>